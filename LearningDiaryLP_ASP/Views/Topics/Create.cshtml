@model LearningDiaryLP_ASP.Models.Topic

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/create.css" rel="stylesheet" />
<h1>Add entry</h1>

<div class="row">

    <div class="container" id="createIndex">
        <div class="container-fluid">
            <div class="col">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        Tähän tulee id automaattisesti.
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" id="inputfield" onmouseover="grey(this)" onmouseout="white(this)" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" id="inputfield" onmouseover="grey(this)"onmouseout="white(this)" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeToMaster" class="control-label"></label>
                        <input asp-for="TimeToMaster" class="form-control" id="inputfield" onmouseover="grey(this)"onmouseout="white(this)"/>
                        <span asp-validation-for="TimeToMaster" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeSpent" class="control-label"></label>
                        <input asp-for="TimeSpent" class="form-control" id="inputfield" onmouseover="grey(this)"onmouseout="white(this)" />
                        <span asp-validation-for="TimeSpent" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Source" class="control-label"></label>
                        <input asp-for="Source" class="form-control" id="inputfield" onmouseover="grey(this)"onmouseout="white(this)"/>
                        <span asp-validation-for="Source" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartLearningDate" class="control-label"></label>
                        <input asp-for="StartLearningDate" class="form-control" id="inputfield" onmouseover="grey(this)"onmouseout="white(this)"/>
                        <span asp-validation-for="StartLearningDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add entry" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col">
        <div class="btn btn-primary" id="back">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
<script src="~/js/site.js"></script>
