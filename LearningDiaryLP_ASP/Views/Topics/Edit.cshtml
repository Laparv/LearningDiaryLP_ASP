@model LearningDiaryLP_ASP.Models.Topic

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/detailsEdit.css" rel="stylesheet" />
<h1>Edit</h1>


<div class="container-fluid" id="info">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeToMaster" class="control-label"></label>
                    <input asp-for="TimeToMaster" class="form-control" />
                    <span asp-validation-for="TimeToMaster" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeSpent" class="control-label"></label>
                    <input asp-for="TimeSpent" class="form-control" />
                    <span asp-validation-for="TimeSpent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Source" class="control-label"></label>
                    <input asp-for="Source" class="form-control" />
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartLearningDate" class="control-label"></label>
                    <input asp-for="StartLearningDate" type="date" class="form-control" />
                    <span asp-validation-for="StartLearningDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

